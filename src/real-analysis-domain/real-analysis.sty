      -- TODO: compute the whole GPI
      override dfx.shape = Line {
      	       startX = I.shape.startX
	       startY = 0.0
	       endX = I.shape.endX
	       endY = 200.0
	       thickness = 2.0
      	       color = Colors.lightblue
