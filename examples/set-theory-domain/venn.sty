canvas {
  width = 800
  height = 700
}

forall Set x {
    x.icon = Rectangle {
        strokeWidth : 0.0
    }

    x.text = Text {
        string : x.label
    }

    ensure contains(x.icon, x.text, 10.0)
    ensure minSize(x.icon)
    ensure maxSize(x.icon, canvas.height)
    encourage sameCenter(x.text, x.icon)
    x.textLayering = x.text above x.icon
}

forall Set x; Set y
where IsSubset(x, y) {

    ensure disjoint(y.text, x.icon, 30.0)
    ensure contains(y.icon, x.icon, 10.0)
    -- ensure disjoint(y.text, x.icon)
    -- ensure contains(y.icon, x.icon)
    x.icon above y.icon
}

