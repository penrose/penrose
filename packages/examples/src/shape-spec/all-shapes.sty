canvas {
  width = 400
  height = 500
}
forall TCircle X
{
    X.icon = Circle { }
    -- X.callout = Callout {
    --     anchor: X.icon.center
    -- }
}
forall TEllipse X
{
    X.icon = Ellipse { }
}
forall TRectangle X
{
    X.icon = Rectangle { }
}
forall TEquation X
{
    X.icon = Equation { }
}
forall TLine X
{
    X.icon = Line { 
        endArrowhead: "straight"
        startArrowhead: "straight"
    }
}
forall TPath X
{
    X.icon = Path { 
        d : pathFromPoints("open", [(0,0), (0,100), (100,100)])
    }
}
forall TImage X
{
    X.icon = Image { }
}
forall TPolyline X
{
    X.icon = Polyline { }
}
forall TPolygon X
{
    X.icon = Polygon { 
        points: ((20.0, 10.0), (120.0, 20.0), (30.0, 70.0))
    }
}
