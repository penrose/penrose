canvas {
  width = 800
  height = 700
}

forall Path a {
    a.icon = Path { }
}

forall Square d {
    d.side = ?
    d.icon = Rectangle { 
        width: d.side
        height: d.side
        rx: 0
        rotation: 45
    }
}

forall Circle e {
    e.icon = Circle {
        center: [20,20]
        r: 40.0
        -- fillColor: rgba(255.0,43.0,0.0,0.0)
        -- pathLength: 6.0
     }
}

forall Rectangle f {
    f.icon = Rectangle { 
        rx: 20
        center: (20,20)
    }
}

forall Line g {
    g.icon = Line { }
}

forall Equation h {
    h.icon = Equation { 
        string: "i am a label"
        rotation: 45
    }
}

forall Image i {
    i.icon = Image { }
}

forall Polygon j {
	j.icon = Polygon { 
        points: ((-80.0, 0.0), (100.0, 0.0), (10.0, 50.0))
        strokeWidth: 20
        scale : 1
	}
}

forall Polyline k {
	k.icon = Polyline { 
        points: ((-20.0, 0.0), (100.0, 0.0), (10.0, 50.0))
        strokeWidth: 100
        scale : 2
        center : (2,3)
	}
}

forall Ellipse l {
    l.icon = Ellipse {
        center: [20,20]
        rx: 20
        ry: 20
     }
}
