-- Fork of venn-opt-test to verify doing optimization through an (external) computation

canvas {
  width = 800
  height = 700
}

Colors {
   Colors.none = none()
   Colors.black = rgba( 0.0, 0.0, 0.0, 1.0 )
   Colors.blue = rgba( 0.8, 0.7, 1.0, 0.2 )
   Colors.red = rgba( 1.0, 0.0, 0.0, 0.5 )
}

const {
      const.circle = Circle {
                   center : (0., 0.)
                   r : 100.0
                   fillColor : Colors.none
                   strokeWidth : 5.0
                   strokeColor : Colors.red
      }
}

forall Set x {
       x.r = 100.0
       x.angle = ?       

    x.icon = Circle {
            center : (x.r * cos(x.angle), x.r * sin(x.angle))
            strokeWidth : 0.0
    }

    x.text = Equation {
        string : x.label
    }

    ensure contains(x.icon, x.text)
    ensure lessThan(20, x.icon.r)
    encourage sameCenter(x.text, x.icon)
    x.textLayering = x.text above x.icon
}

