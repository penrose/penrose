    }

     override `Rm`.text.center = (`Rm`.icon.center[0] + `Rm`.icon.width / 2.0 - Const.padding, `Rm`.icon.center[1] + `Rm`.icon.width / 2.0 - Const.padding)

    delete `Rm`.labelFn
