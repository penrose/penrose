Angle a, b
where EqualAngle(a, b) {
  -- make sure angle a is equal to angle b
  dotA = dot(normalize(a.p - a.q), normalize(a.r - a.q))
  dotB = dot(normalize(b.p - b.q), normalize(b.r - b.q))
  ensure equal(dotA, dotB)
}

