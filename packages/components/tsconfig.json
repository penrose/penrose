{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "moduleResolution": "node" // Monaco and styled-components break with ESM module resolution
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
