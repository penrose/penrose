{
  "name": "@penrose/optimizer",
  "version": "2.2.0",
  "type": "module",
  "author": "Penrose Team (https://penrose.cs.cmu.edu/)",
  "license": "MIT",
  "files": [
    "bindings/*.d.ts",
    "index.d.ts",
    "index.js",
    "source.d.ts"
  ],
  "devDependencies": {
    "esbuild": "^0.16",
    "typescript": "^4"
  },
  "scripts": {
    "build": "esbuild ./source.ts --outfile=index.js --platform=neutral --bundle --loader:.wasm=binary --define:import.meta.url=null --sourcemap",
    "build-decls": "cargo test && tsc",
    "build-wasm": "cargo build --target=wasm32-unknown-unknown --release",
    "build-wasm-bindgen": "wasm-bindgen --target=web --out-dir=build target/wasm32-unknown-unknown/release/penrose_optimizer.wasm",
    "format": "cargo fmt",
    "format:check": "cargo fmt --check",
    "typecheck": ":"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "build-wasm-bindgen"
        ]
      },
      "build-decls": {
        "dependsOn": [
          "build-wasm-bindgen"
        ]
      },
      "build-wasm-bindgen": {
        "dependsOn": [
          "build-wasm"
        ]
      }
    }
  }
}
