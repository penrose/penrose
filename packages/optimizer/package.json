{
  "name": "@penrose/optimizer",
  "version": "1.3.0",
  "private": true,
  "scripts": {
    "build": "esbuild ${FORCE_COLOR+--color=true} ./source.ts --bundle --loader:.wasm=binary --outfile=index.js --format=cjs --sourcemap",
    "build-decls": ":",
    "build-wasm": "cargo ${FORCE_COLOR+--color=always} build --release",
    "build-wasm-bindgen": "wasm-bindgen --target=web --keep-lld-exports --out-dir=build target/wasm32-unknown-unknown/release/penrose_optimizer.wasm",
    "typecheck": ":"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "build-wasm-bindgen"
        ],
        "outputs": [
          "{projectRoot}/index.js",
          "{projectRoot}/index.js.map"
        ]
      },
      "build-decls": {
        "dependsOn": [
          "build-wasm-bindgen"
        ]
      },
      "build-wasm": {
        "outputs": [
          "{projectRoot}/target"
        ]
      },
      "build-wasm-bindgen": {
        "dependsOn": [
          "build-wasm"
        ],
        "outputs": [
          "{projectRoot}/build"
        ]
      }
    }
  },
  "devDependencies": {
    "esbuild": "^0.15.14"
  }
}
