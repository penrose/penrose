{
  "name": "@penrose/docs-site",
  "version": "4.0.0-alpha.4",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_OPTIONS='--max-old-space-size=8192' vitepress build",
    "build-decls": ":",
    "copy-editor": "shx mkdir -p ./public/try/ && shx cp -r ../editor/dist/* ./public/try",
    "build-shapedefs": "shx rm -f ./src/shapedefs.json && node ./scripts/shapedefs.js ./src/shapedefs.json",
    "build-bloom-ref": "mkdir public/bloom-docs || rm -rf public/bloom-docs/* && cp -r ../bloom/docs/* public/bloom-docs && touch public/bloom-docs/.gitignore && echo '*' > public/bloom-docs/.gitignore",
    "bundle-bloom": "cp ../bloom/dist/bloom.min.js public/bloom.min.js",
    "dev": "vitepress dev",
    "preview": "vitepress preview",
    "typecheck": ":"
  },
  "nx": {
    "targets": {
      "copy-editor": {
        "dependsOn": [
          "^build"
        ]
      },
      "build": {
        "dependsOn": [
          "^build",
          "copy-editor",
          "build-shapedefs",
          "build-bloom-ref",
          "bundle-bloom"
        ]
      },
      "build-shapedefs": {
        "dependsOn": [
          "^build"
        ]
      },
      "build-bloom-ref": {
        "dependsOn": [
          "^build"
        ]
      },
      "bundle-bloom": {
        "dependsOn": [
          "^build"
        ]
      },
      "dev": {
        "dependsOn": [
          "^build",
          "copy-editor",
          "build-shapedefs"
        ]
      },
      "preview": {
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "dependencies": {
    "@penrose/bloom": "^4.0.0-alpha.4",
    "@penrose/components": "^4.0.0-alpha.4",
    "@penrose/examples": "^4.0.0-alpha.4",
    "@types/prismjs": "^1.26.4",
    "markdown-it": "^13.0.1",
    "markdown-it-katex": "^2.0.3",
    "prismjs": "^1.29.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-simple-code-editor": "^0.14.1",
    "veaury": "^2.3.11"
  },
  "devDependencies": {
    "@penrose/core": "^4.0.0-alpha.4",
    "@penrose/editor": "^4.0.0-alpha.4",
    "@penrose/roger": "^4.0.0-alpha.4",
    "@tailwindcss/typography": "^0.5.4",
    "@types/markdown-it": "^12.2.3",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "chalk": "^3.0.0",
    "shikiji": "^0.10.0-beta.6",
    "shx": "^0.3.3",
    "tailwindcss": "^3.1.8",
    "vitepress": "^1.3"
  }
}
