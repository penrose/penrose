{
  "npmScope": "penrose",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build-decls",
          "build-examples",
          "build-parsers",
          "build-rollup",
          "build-shapedefs",
          "build-storybook",
          "build-wasm",
          "docs",
          "write-translations"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build-decls": {
      "dependsOn": ["^build-decls"]
    },
    "typecheck": {
      "dependsOn": ["build-decls"]
    }
  }
}
